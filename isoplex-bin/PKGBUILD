# Maintainer: thiagoc <root@thiagoc.net>
# https://github.com/thiagoc/aur-packages

pkgname=isoplex-bin
pkgver=0.1
pkgrel=1
pkgdesc='Watch movies online for free'
arch=('i686' 'x86_64')
url='http://isoplex.isohunt.to'
license=('custom')
optdepends=('libudev.so.0: install it if HipHop does not run correctly')
conflicts=('isoplex')
options=('!strip')
_pkgarch='32'
_md5sum='fe8aa3b0b9b0e0880c2a86e4559fa7c7'
if [ "${CARCH}" == 'x86_64' ]; then
  _pkgarch='64'
  _md5sum='51423496ed359c0d2adaeb8f83ce9353'
fi
source=(http://isoplex.isohunt.to/files/linux${_pkgarch}.zip)
md5sums=($_md5sum)

package() {
  cd ${srcdir}/linux${_pkgarch}
  install -dm 755 ${pkgdir}/opt/${pkgname}
  install -dm 755 ${pkgdir}/usr/bin
  install -Dm 755 Isoplex/Isoplex ${pkgdir}/opt/${pkgname}
  install -Dm 644 Isoplex/libffmpegsumo.so ${pkgdir}/opt/${pkgname}
  install -Dm 644 Isoplex/nw.pak ${pkgdir}/opt/${pkgname}
  ln -s /opt/${pkgname}/Isoplex ${pkgdir}/usr/bin
}

# vim:set ts=2 sw=2 et:
