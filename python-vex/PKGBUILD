# Maintainer: Thiago Coutinho <root@thiagoc.net>
# https://github.com/thiagoc/aur-packages

pkgname='python-vex'
pkgver=0.0.4
pkgrel=1
pkgdesc="Run commands in a virtualenv"
url="http://github.com/sashahart/vex"
arch=('any')
license=('MIT')
depends=('python')
source=('https://pypi.python.org/packages/source/v/vex/vex-0.0.4.tar.gz')
md5sums=('0ee74f8399fd27f4521f5bed845a0605')

build() {
    cd $srcdir/vex-$pkgver
    python setup.py build || return 1
}
package() {
    cd $srcdir/vex-$pkgver
    python setup.py install --root=$pkgdir || return 1 
}

